# BlogForge Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys (Required)
GROQ_API_KEY="your_groq_api_key_here"
TAVILY_API_KEY="your_tavily_api_key_here"

# LangSmith Configuration (Optional)
LANGSMITH_API_KEY="your_langsmith_api_key_here"
LANGSMITH_TRACING="true"
LANGSMITH_PROJECT="BlogForge"

# Model Configuration
# Choose your AI provider and model

# Option 1: Groq (Recommended for development)
MODEL_NAME="openai/gpt-oss-120b"
MODEL_PROVIDER="groq"
AI_API_KEY="your_groq_api_key_here"

# Option 2: OpenAI
# MODEL_NAME="gpt-4"
# MODEL_PROVIDER="openai"
# AI_API_KEY="your_openai_api_key_here"

# Option 3: Custom API (Enterprise)
# MODEL_NAME="gpt-5"
# MODEL_PROVIDER="openai"
# AI_BASE_URL="https://your-custom-api.com/v1"
# AI_API_KEY="your_custom_api_key_here"